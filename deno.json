{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ],
    "types": [
      "./types.d.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react@17.0.2"
  },
  "tasks": {
    "test": "deno test -A --location=http://localhost --import-map=import_map.json",
    "dev": "ALEPH_DEV=true deno run -A cli.ts dev -L debug·",
    "start": "ALEPH_DEV=true deno run -A cli.ts start -L debug·",
    "build": "ALEPH_DEV=true deno run -A cli.ts build -L debug·",
    "build_wasm": "deno run -A compiler/build.ts"
  },
  "fmt": {
    "files": {
      "exclude": [
        "compiler/target/",
        "compiler/pkg/"
      ]
    },
    "options": {
      "lineWidth": 120
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "lib/nomodule.js",
        "compiler/dist/",
        "compiler/pkg/"
      ]
    }
  }
}